{
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:jest/recommended",
    "plugin:node/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": { "ecmaVersion": 8 },
  "plugins": ["node", "prettier", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "node/exports-style": ["error", "module.exports"],
    "no-plusplus": "off"
  }
}
